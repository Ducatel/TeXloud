<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dip" >

    <TextView
        android:id="@+id/successCompil_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="10dip"
        android:text="Compilation OK"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/successCompil_tv_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="#EBB811"
        android:textSize="18dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/successCompil_tv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="10dip"
            android:text="Line "
            android:textColor="#EBB811"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/successCompil_tv_lineNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="10dip"
            android:textColor="#EBB811"
            android:textSize="18dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/pdf_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="10dip"
        android:text="PDF sauvegardÃ© : "
        android:textColor="#699838"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pdf_tv"
        android:gravity="right" >

        <Button
            android:id="@+id/button_ok_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingRight="30dp"
            android:text="Afficher le pdf"
            android:textColor="#699838"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_cancel_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Fermer"
            android:textColor="#699838"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>